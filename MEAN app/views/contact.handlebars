{{#section 'title'}}
<title>Contact</title>
{{/section}}
 
  <div class='content '>
   <h1 class="text-center">Fill the form to contact with me</h1>
    <div class="container">
        <form class="form-horizontal" id="contact">
            <div class="form-group">
                    <label for="fname" class="control-label">First name</label>
                    <input type="text" id="fname" class="style-animation" placeholder="Enter your name">
                    <label for="lname" class="control-label col-xs-offset-1">Last name</label>
                    <input type="text" id="lname" class="style-animation" placeholder="Enter your last name">
                    <label for="email" class="control-label col-xs-offset-1">Email</label><input type="email" id="email" class="style-animation" placeholder="Enter your email">
                
            </div>
            <div class="form-group"><label for="textarea_addition_info" class="col-xs-1">Message</label><textarea form="contact" class="col-xs-9 style-animation" id="textarea_addition_info" placeholder="Here you have to write a reason to contact with me"></textarea></div>
            <div class="col-xs-offset-3"><button type="submit" class="btn btn-lg"> Send me a message</button></div>
        </form>
    </div>
</div>
<script src="code/style_for_inputs.js"></script>
