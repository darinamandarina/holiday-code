<div id="modalPrediction" class="modal fade">
    <div class="modal-face">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4>Твой совет на сегодня</h4>
                </div>
                <div class="modal-body">
                    <!-- тут должно выскакивать предсказание -->
                    
                        {{#with partials.predictionContext}} {{getPrediction}} {{/with}}
                    
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnRepeat" data-dismiss="modal" class="btn">Спасибо</button>
                    <!-- добавить кнопку, обновляющую значение тела модального окна -->
                </div>
            </div>
        </div>
    </div>
</div>

